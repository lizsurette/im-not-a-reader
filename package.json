{
  "name": "screen-reader-extension",
  "version": "1.0.0",
  "description": "Browser extension that reads web articles aloud with high-quality text-to-speech",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "build": "npm run lint && npm run test",
    "dev": "web-ext run --source-dir=src --target=chromium",
    "package": "web-ext build --source-dir=src"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "selenium-webdriver": "^4.15.0",
    "web-ext": "^7.8.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js",
      "<rootDir>/tests/**/*.spec.js",
      "<rootDir>/tests/**/*.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/manifest.json",
      "!src/icons/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "babel": {
    "presets": [["@babel/preset-env", { "targets": { "browsers": ["last 2 versions"] } }]]
  },
  "keywords": ["browser-extension", "text-to-speech", "accessibility", "screen-reader"],
  "author": "Your Name",
  "license": "MIT"
}